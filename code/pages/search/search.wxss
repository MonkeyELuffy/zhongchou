/* pages/search/search.wxss */

.top-nav{
  width: 100%;
  z-index: 10;
  display: flex;
  padding: 30rpx 30rpx 30rpx 50rpx;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-bottom: 10rpx solid #ddd;
}
/*搜索框*/
.search {
  z-index: 100;
  background-color: transparent;
  flex: 1 1;
}
.search input {
  width: 100%;
  height: 60rpx;
  background-color: #ddd;
  opacity: 0.5;
  color: #333;
  font-size: 24rpx;
  padding-left: 80rpx;
  border-radius: 30rpx;
  border: 2rpx solid #ddd;
  margin-left: -50rpx;
}
.search .icon {
  width: 30rpx;
  height: 30rpx;
}
/*确定  */
.sure{
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
  height: 60rpx;
  box-sizing: border-box;
}


/*数据列表  */
.data-list{
  width: 100%;
  position: absolute;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.item{
  padding:20rpx 0 0 20rpx;
}
.item-image{
  width: 180rpx;
  height: 180rpx;
  box-sizing: border-box;
  margin-right: 30rpx;
}
.detail-name{
  font-size: 36rpx;
  font-weight: 700;
}
.label-contain{
  font-size: 28rpx;
}
.label-item{
  padding: 5rpx 20rpx;
  border: 1rpx solid red;
  margin-right: 8rpx;
}
.haoping{
  font-size: 32rpx;
  color: #666;
}
.sale-and-juli{
  margin-top: 40rpx;
  color: #999;
  font-size: 32rpx;
  border-bottom: 1rpx solid #999;
  padding-bottom: 20rpx;
}
.juli{
  padding-right: 20rpx;
}