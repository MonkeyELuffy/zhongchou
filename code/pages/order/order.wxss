/* pages/oder/oder.wxss */
.contain {
  width: 100%;
  height: 100vh;
  background-color: rgb(240, 240, 240)
}
image {
  width: 100%;
  height: 100%;
}
/*横向排列的菜单*/
.nav-title {
  position: fixed;
  top:-2rpx;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 40rpx;
  background-color: #fff;
  color: #666;
  font-size: 28rpx;
  z-index: 1000;
}
.nav-item {
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  padding: 0 20rpx;
}
/*菜单定位*/
.nav-title-clear {
  width: 100%;
  height: 80rpx;
}

/*订单*/
	.order-message {
		position: relative;
		width: 100%;
		background-color: #fff;
		padding: 30rpx 20rpx;
    box-sizing: border-box;
    border-top: 10rpx solid #ddd;
	}

	.order-title {
		display: flex;
		justify-content: space-between;
		border-bottom: 2rpx solid #ddd;
		font-size: 24rpx;
		color: #999;
	}
	.order-title .order-number,.order-title .order-time {
		height: 60rpx;
		line-height: 60rpx;
	}
  /*订单详情*/
  .order-detail {
    width: 100%;
    display: flex;
		border-bottom: 2rpx solid #ddd;
  }
  /*产品图片*/
  .order-img {
    width: 160rpx;
    height: 160rpx;
    margin: 20rpx 0rpx;
  }
  /*产品介绍*/
  .order-text-price {
    width: 50%;
    flex: 1 1;
    display: flex;
    flex-direction: column;
    margin: 40rpx 0 20rpx 20rpx;
  }
  .order-text {
    width: 100%;
    min-height: 80rpx;
    font-size: 24rpx;
    color: #666;
    padding-bottom: 20rpx;
  }
  .order-price {
    width: 100%;
    height: 60rpx;
    display: flex;
    line-height: 60rpx;
    justify-content: space-between;
  }
  /*实际价格*/
  .order-price .order-real-price {
    color: red;
    font-size: 24rpx;
    display: flex;
    font-weight: 800;
  }
  /*原价*/
  .order-price .order-before-price {
    color: #999;
    font-size: 20rpx;
    text-decoration:line-through;
    align-self: flex-start;
    padding:0rpx 28rpx;
  }
  /*产品数量*/
  .order-price .order-quantity {
    color: #999;
    font-size: 24rpx;
  }
  /*合计价格*/
  .total-price {
    position: relative;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    justify-content: flex-end;
  }
  .total-price .total-price-text {
    color: #666;
    font-size: 24rpx;
  }
  .total-price .total-price-real {
    color: red;
    font-size: 28rpx;
    padding: 0rpx 20rpx;
    font-weight: 800;
  }
  .total-price .total-price-before {
    color: #999;
    font-size: 24rpx;
    text-decoration:line-through;
  }
  /*按钮*/
  .button-group {
    position: relative;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    justify-content: flex-end;
  }
  .button-group button {
    height: 48rpx;
    font-size: 24rpx;
    color: #999;
    padding: 0 16rpx;
    line-height: 48rpx;
    border-radius: 4rpx;
    margin: 0rpx;
    margin-left: 40rpx;
  }
  /*物流信息*/
  .stream {
    width: 100%;
    display: flex;
    flex-direction: column;
    font-size: 24rpx;
    display: none;
  }
  .stream-title {
    height: 60rpx;
    line-height: 60rpx;
    color: #333;
  }
  .icon {
    width: 30rpx;
    height: 30rpx;
    padding-right: 20rpx;
  }
  .icon image {
    width: 30rpx;
    height: 30rpx;
  }
  .stream-list {
    display: flex;
    /* height: 70rpx; */
    border-bottom: 2rpx solid #ccc;
    margin: 10rpx 0;
    padding: 10rpx 0;
  }
  .stream-list-text {
    color: #666;
  }
  .stream-list-time {
    font-size: 20rpx;
    color: #aaa;
  }

/*清除浮动*/
.clear {
  clear: both;
}

.no-more{
  width: 100%;
  font-size: 24rpx;
  padding: 20rpx;
  box-sizing: border-box;
  color: #999;
  text-align: center;
  background-color: #fff;
}

