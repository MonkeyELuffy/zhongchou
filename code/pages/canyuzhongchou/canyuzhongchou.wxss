/* pages/canyuzhongchou/canyuzhongchou.wxss */
@import "../zhongchoujinduItem/zhongchoujinduItem.wxss";

.contain{
  width: 100%;
  box-sizing: border-box;
  height: 100vh;
  background-color: #fff;
}
/*众筹说明  */
.name{
  font-size: 28rpx;
  color: #333;
  padding: 40rpx 40rpx 0 40rpx;
}
.state{
  padding: 10rpx 20rpx;
  margin: 20rpx 40rpx;
  border-radius: 10rpx;
  background:linear-gradient(to right,rgb(19, 191, 222), rgb(120, 233, 250));
  color: #fff;
  font-size: 28rpx;
  width: 100rpx;
  text-align: center;
}
.desc{
  font-size: 24rpx;
  color: #999;
  padding: 0 40rpx;
}
.button {
  width: 500rpx;
  height: 100rpx;
  background: linear-gradient(to right,rgb(19, 191, 222), rgb(120, 233, 250));
  border-radius: 50rpx;
  color: #fff;
  font-size: 34rpx;
  line-height: 100rpx;
  margin: 0 auto;
  text-align: center;
  margin-top: 60rpx;
  margin-bottom: 20rpx;
}
.des{
  font-size: 24rpx;
  text-align: center;
  color: #999;
}
input{
  font-size: 28rpx;
  color: #666;
  padding: 20rpx;
  margin: 30rpx 40rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgb(19, 191, 222);
}
.input-placeholder{
  color: #999;
}