/* pages/add_address/add_address.wxss */
.button {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background: linear-gradient(to right,rgb(19, 191, 222), rgb(120, 233, 250));
  color: #fff;
  font-size: 34rpx;
  line-height: 100rpx;
  margin: 0 auto;
  text-align: center;
}
.button:active {
  background-color: rgba(255, 0, 0, 0.8);
  color: #fff;
}
.message{
  border-top: 10rpx solid #eee;
}

.message-list {
  border-bottom: 2rpx solid #eee;
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  color: #333;
}
.message-list .text {
  width: 190rpx;
}
.message-list input {
  flex: 1 1 ;
  height: 40rpx;
  position: relative;
  font-size: 26rpx;
  text-align: right;
}