/* pages/sign/sign.wxss */
@import "../imageSwiper/imageSwiper.wxss";

page{
  background-color: #eee;
}
.button {
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  background: linear-gradient(to right,rgb(19, 191, 222), rgb(120, 233, 250));
  color: #fff;
  font-size: 34rpx;
  line-height: 100rpx;
  margin: 0 auto;
  text-align: center;
}
.check-num{
  background: linear-gradient(to right,rgb(19, 191, 222), rgb(120, 233, 250));
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  border-radius: 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 10rpx;
  width: 160rpx;
}
.input-contain{
  margin: 0 30rpx 2rpx 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.admin-input{
  padding-left: 45rpx;
  font-size: 30rpx;
}
.input-icon{
  width: 60rpx;
  height: 60rpx;
}
.interview{
  color: #333;
  font-size: 30rpx;
  padding: 30rpx;
}
.sign-contain{
  box-sizing: border-box;
  margin: 0 30rpx 2rpx 30rpx;
}
.sign-type{
  width: 50%;
  text-align: center;
  border-radius: 8rpx 8rpx 0 0;
  padding: 20rpx 0;
  font-size: 30rpx;  
}
