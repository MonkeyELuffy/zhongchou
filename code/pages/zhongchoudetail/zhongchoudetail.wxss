/* pages/zhongchoudetail/zhongchoudetail.wxss */
@import "../imageSwiper/imageSwiper.wxss";
@import "../zhongchoujinduItem/zhongchoujinduItem.wxss";
@import "../pingjiaItem/pingjiaItem.wxss";

.contain{
  background-color: #fff;
}
.item-image{
  position: relative;
  height: 320rpx;
}
/*众筹说明  */
.name{
  font-size: 28rpx;
  color: #333;
  padding: 0 40rpx;
}
.state{
  padding: 10rpx 20rpx;
  margin: 20rpx 40rpx;
  border-radius: 10rpx;
  background:linear-gradient(to right,rgb(19, 191, 222), rgb(120, 233, 250));
  color: #fff;
  font-size: 28rpx;
  width: 100rpx;
  text-align: center;
}
.desc{
  font-size: 24rpx;
  color: #999;
  padding: 0 40rpx;
}
/*横向排列的菜单*/
.nav-title {
  background-color: #fff;
  color: #666;
  font-size: 30rpx;
  white-space: nowrap; 
  box-shadow: 0rpx 0rpx 2rpx #ddd ;
  padding: 10rpx 40rpx;
  box-sizing:border-box;
  border-top: 10rpx solid #eee;
}
.nav-item {
  display: inline-block;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}
/*详情  */
.detail-img{
  width:100%;
  height: 300rpx; 
}
/*进展  */
.jinzhan{
  font-size: 28rpx;
  color: #333;
  padding-right: 40rpx;
}

/*底部按钮  */
.bottom-btn{
  box-sizing: border-box;
  position: fixed;
  z-index: 1;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  color: #fff;
  font-size: 32rpx;
}
.left{
  background-color: #f67f79;
  padding-right: 230rpx;
}
.icon-contain{
  padding:10rpx 0rpx 10rpx 50rpx;
  text-align: center;
}
.image{
  width: 50rpx;
  height: 50rpx;
  box-sizing: border-box;
  z-index: 2;
}
.kefu{
  font-size: 20rpx;
}
.ing{
  display: flex;
  align-items: center;
  justify-content: center;
}
.woyaozhongchou{
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  width: 230rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  background-color: #fa3f06;
}

.pingjia-item{
  padding: 20rpx 30rpx 0 30rpx;
  background-color: #fff;
}