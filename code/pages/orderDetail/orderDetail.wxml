<!--pages/dingdanxiangqing/dingdanxiangqing.wxml-->


<view class="contain">
  <!--收货方式  -->
  <view class='type'>{{shouhuoType}}</view>
  <!--取货或寄货地址  -->
  <view class="address" bindtap="dizhi">
    <view class="address-message">
      <view class="now-address">
        <view class=''>{{address.title}}</view>
        <p class="xiaoziti">{{address.add}}</p>
      </view>
      <view class="address-name-tel">{{address.name}} {{address.tel}} </view>
    </view>
    <!-- <image class="seemore" src="{{seemore}}"></image> -->
  </view>
  <!--到店取货时显示  -->
  <view class='daodian' wx:if='{{shouhuoType == "到店取货-取货地址"}}'>
    <!--取货人信息  -->
    <view class='daodian-item' wx:for='{{userMsg}}'>{{item.name}}:{{item.value}}</view>
  </view>
  <!--订单号  -->
  <view class="wenzi1">订单号：{{order_data.ordersn}}</view>

  <view class="cartList">
   <view class='good-contain'>
    <!--list item订单-->
    <block wx:for="{{order_data.goods}}" wx:key='item.key'>
      <view class="goods">
        <!--产品左侧图片-->
        <view>
          <image src='{{item.image}}' class="good-img" />
        </view>
        <!--右侧说明部分-->
        <view class="good-cont">
          <!--文字说明-->
          <view class="goods-navigator">
            <text class="good-name">{{item.name}} {{item.norms || ""}}</text>
          </view>
          <!--价钱和购物加减的父盒子-->
          <view class="good-price">
            <text class="price">￥{{item.goods_price}}</text>
            <view class="order-quantity">x{{item.num}}</view>
            <button bindtap="{{item.is_evaluate === 0 ? 'pingjia' : 'hadpingjia'}}" class="pingjia" data-goodsid="{{item.goods_id}}" data-ordersn="{{order_data.ordersn}}" hidden="{{(item.is_evaluate === 0 || item.is_evaluate === 1) ? false : true}}"  wx:for-index="index"  data-index="{{index}}">{{item.is_evaluate === 0 ? '立即评价':'已评价'}}</button>
          </view>
        </view>
      </view>
    </block>
    <!--备注  -->
    <view class='beizhu'><span style='color:#333;font-size:28rpx;'>备注：</span>{{order_data.beizhu}}</view>
   </view>
    
    <view class='jiage-msg'>
      <view class='total-price flex-between'>
        <view class='total-name wenzi1'>商品总额</view>
        <view class='total-value big-price'>￥{{order_data.totalPrice}}</view>
      </view>
      <!--有折扣的时候就显示  -->
      <view class='zhekou-contain'>
        <view class='zhekou-item flex-between' wx:for='{{order_data.zhekouList}}'>
          <view class='zhekou-name wenzi1'>{{item.name}}</view>
          <view class='zhekou-value little-price'>-￥ {{item.value}}</view>
        </view>
      </view>
      <view class='yunfei flex-between'>
        <view class='yunfei-name wenzi1'>运费</view>
        <view class='yunfei-value little-price'>￥{{order_data.yunfei}}</view>
      </view>
    </view>
    <!--实际付款  -->
    <view class='shijifukuan '>需付款：<span style='color:#f83030'>￥{{order_data.shijifukuan}}</span></view>
    <!--时间信息  -->
    <view class='time-msg'>
      <view wx:for='{{order_data.timeList}}' class='time-item'>{{item.name}}: {{item.value}}</view>
    </view>

    <!--按钮-->
    <view class=" flex-between">
      <view class='time-status' wx:if='{{order_data.stateText1}}'>
        <view class='time'>{{order_data.stateText1}}</view>
        <view class='time'>{{order_data.stateText2}}</view>
      </view>
      <view class='button-group  flex-all'>
        <button wx:for="{{order_data.btns}}" data-ordersn="{{order_data.ordersn}}" data-now_all_price="{{order_data.goods_total}}" wx:for-item="itemName" bindtap="clickBtn" data-page="{{itemName.name}}" style='background-color:{{itemName.bgColor}}' >{{itemName.name}}</button>
      </view>
    </view>

    <view class="clear"></view>
    <!--footer 功能操作-->
    <!-- <view class="total"> -->
      <!-- <view class="total_text"bindtap='del_order'>删除订单</view> -->
      <!-- <button class="total_js" bindtap="buy">再次购买</button> -->
    <!-- </view> -->
  </view>
</view>